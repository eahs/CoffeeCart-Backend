@model ADSBackend.Models.HomeViewModels.HomeViewModel

@{
    ViewData["Title"] = "Rolling Rover Coffee Cart Backend!";
}

<div class="ibox">
    <div class="ibox-title">
        <h2>@Model.User.FullName's Dashboard</h2>
    </div>
    <div class="ibox-content">
        <p>You are logged in and ready to go!</p>
        <a href="#" class="btn btn-success">
            <span class="fa fa-envelope"></span> Send a Message
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Products</h5>
            </div>
            <div class="ibox-content">
                <p>Orders can be created, viewed, edited, and deleted through the orders page.</p>
                <a asp-controller="OrderModels" asp-action="Index" class="btn btn-primary">
                    <span class="fa fa-coffee"></span> Manage Orders
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="ibox">
            <div class="ibox-title">
                <h5>My Account</h5>
            </div>
            <div class="ibox-content">
                <p>It's how you log in!</p>
                <a asp-controller="Manage" asp-action="Index" class="btn btn-default">
                    <span class="fa fa-user-circle-o"></span> Manage Account
                </a>
            </div>
        </div>
    </div>
</div>


